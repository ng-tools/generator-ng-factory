doctype html
html(lang="{{ props.ngf.locale }}")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title {{ props.pkg.name }} - {{ props.pkg.description }}
    meta(name="description", content="{{ props.pkg.description }}")
  {%- if props.opt.legacy %}

    <!--[if lt IE 9]>
    script(src="//cdnjs.cloudflare.com/ajax/libs/es5-shim/2.2.0/es5-shim.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.min.js")
    <![endif]-->
  {%- endif %}

    //- Sets initial viewport load and disables zooming
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    //- Makes your prototype chrome-less once bookmarked to your phone's home screen
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
    //- Set a shorter title for iOS6 devices when saved to home screen
    meta(name="apple-mobile-web-app-title" content="{{ props.pkg.name }}")

    //- Favicon
    link(rel="icon", href="favicon.ico", type="image/x-icon")
    link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
    //- Author of this application
    link(rel="author" href="https://github.com/{{ props.ngf.username }}")
    base(href="/")
    //- Hack for angular@2.0.0-alpha.{32,33,34}
    script baseElement = document.querySelector('base'); baseElement.attr = baseElement.getAttribute;

    //- bower:css
    //- endinject

    //- inject:css
    //- endinject

  body
    app

    //- bower:js
    //- endinject

    //- libs:js
    //- endinject

    //- angular:js
    //- endinject

    //- inject:js
    //- endinject

    //- views:js
    //- endinject

    script
      | // Bootstrap the Angular2 application
      | System.import('app.js').catch(console.error.bind(console));
